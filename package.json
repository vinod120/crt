{
  "name": "common-reporting-tool",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "npm run type-check && npm run lint && vite build",
    "build-plugin": "npm run type-check && npm run lint && vite --config vite-plugin.config.ts build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "format-and-lint": "npm run format && npm run lint",
    "type-check": "./check-typescript-warnings.sh",
    "type-check-staged": "tsc-files --noEmit --strict",
    "test": "vitest",
    "coverage": "vitest run --coverage --silent",
    "postcoverage": "open coverage/index.html",
    "check-all": "npm run format-and-lint && npm run type-check && npm run test",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prepush": "npm run check-all",
    "storybook": "npm run type-check && storybook dev -p 6006",
    "build-storybook": "npm run type-check && storybook build"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@storybook/react-vite": "^9.0.13",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^0.34.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^50.3.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "lint-staged": "^16.1.2",
    "open": "^10.1.2",
    "prettier": "^3.6.2",
    "react-i18next": "^15.5.3",
    "tsc-files": "^1.1.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^0.34.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
